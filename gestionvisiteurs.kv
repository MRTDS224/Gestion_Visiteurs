<HistoriqueScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: [20, 20, 20, 20]
        spacing: 20

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(56)
            spacing: dp(16)

            MDLabel:
                text: "Liste des visiteurs"
                font_style: "Title"
                halign: "left"
                valign: "middle"
                bold: True

            MDTextField:
                id: date_filter
                mode: "outlined"
                size_hint_x: 0.5
                MDTextFieldHintText:
                    text: "YYYY-MM-DD"
                MDTextFieldHelperText:
                    text: "Filtrer par date (YYYY-MM-DD)"

            MDIconButton:
                icon: "filter"
                style: "tonal"
                theme_bg_color: "Custom"
                md_bg_color: "blue"
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.filtrer_historique(date_filter.text)

            MDIconButton:
                icon: "reload"
                style: "tonal"
                theme_bg_color: "Custom"
                md_bg_color: "green"
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.afficher_historique()
            
            MDIconButton:
                icon: "home"
                style: "tonal"
                theme_bg_color: "Custom"
                md_bg_color: "brown"
                theme_icon_color: "Custom"
                icon_color: "white"
                on_release: app.root.current = "accueil"

        VisitorTable:
            id: historique_table